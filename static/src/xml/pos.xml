<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="SpaceSchedule">
        <div class='control-button'>
            <input id="schedule_date" type="date"/>
            <input id="schedule_time" type="time"/>
        </div>
        <table id="schedules_table" align="center" style="border-spacing: 5px;">
            <tr>
                <th>Space</th>
                <th>Schedule</th>
                <th>Availability</th>
            </tr>
        </table>
    </t>

    <t t-extend="OrderReceipt">
        <t t-jquery="div[class='orderlines']" t-operation="before">
            <div class="ticket-info">
                <div>ID: <t t-esc="order.key"/>
                </div>
                <div>Schedule: <br/>
                <t t-foreach="order.schedule_ids" t-as="schedule">
                    <t t-esc="schedule.space_id[1]"/>
                        (
                    <t t-esc="schedule.start_datetime.toLocaleString()"/>
                        )
                    <br/>
                </t>
            </div>
            <br/>
            <div>
                <div align="center" style="margin-top: 3px;">
                    <div id="qrcode"/>
                </div>
            </div>
        </div>
        <br/>
        </t>
        <t t-jquery="div[class='before-footer']" t-operation="before">
            <div id="logos" align="center" style="margin: 3px;">
                <img id="logo_jalisco_gob" src="/space_control/static/images/ar.jpg" style="width: 20%;"/>
                <img id="logo_jalisco_gob" src="/space_control/static/images/Gobierno-de-Jalisco.png" style="width: 20%;"/>
                <img id="logo_jalisco_cultura" src="/space_control/static/images/23_cultura.png" style="width: 20%;"/>
            </div>
        </t>
    </t>
</templates>
