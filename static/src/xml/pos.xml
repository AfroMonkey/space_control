<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="SpaceSchedule">
        <div class='control-button'>
            <input id="schedule_date" type="date"/>
            <input id="schedule_time" type="time"/>
        </div>
    </t>

    <t t-extend="OrderReceipt">
        <t t-jquery="div[class='orderlines']" t-operation="before">
            <div class="ticket-info">
                <div>ID: <t t-esc="order.key"/>
                </div>
                <div>Schedule:
                    <t t-foreach="order.schedule_ids" t-as="schedule">
                        <t t-esc="schedule.space_id[1]"/>
                        (
                        <t t-esc="schedule.start_datetime.toLocaleString()"/>
                        )
                    </t>
                </div>
                <div>
                    <!-- TODO QR -->
                    <div>
                    </div>
                </div>
            </div>
            <br/>
        </t>
    </t>
</templates>
